#!groovy

// 引入共享库
@Library('jenkins-sharelibrary') _

def build = new org.devops.build()

String buildShell = "${env.buildShell}"  // 引用选项参数
String buildType = "${env.buildType}"  // 引用选项参数

pipeline{
    agent{ node {label "master" }}
    stages{
        stage("build"){
            steps{
                script{
                    build.Build(buildType,buildShell)
                }
            }
        }
